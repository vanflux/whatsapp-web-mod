{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2022",
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "paths": {
      "@page-features/*": ["./src/page/features/*"],
      "@page-contexts/*": ["./src/page/contexts/*"],
      "@page-components/*": ["./src/page/components/*"],
      "@page-hooks/*": ["./src/page/hooks/*"]
    }
  }
}
